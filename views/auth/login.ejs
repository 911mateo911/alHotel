<%- include('../elements/head', {name: title}) -%>
    <form class="form login" action="/login" method="POST">
        <h1 class="name">Login</h1>
        <div class="input-wrap">
            <label for="#username">Username</label>
            <input class="textInput" type="text" id="username" placeholder="Username or Email" name="username">
        </div>
        <div class="input-wrap">
            <label for="#password">Password <strong>Show</strong> </label>
            <input class="textInput" name="password" type="password" id="password" placeholder="Password">
            <button type="submit">Login</button>
            <p class="cookies">By signing in you agree to use cookies</p>
        </div>
        <p class="createAcc">Dont have an account? Create one <a href="/register">here</a></p>
    </form>
    <%- include('../elements/flash') -%>
    <%- include('../elements/footer') %>
    <script src="/js/other/login.js"></script>
    </body>

    </html>